{
  "name": "fireside-api",
  "version": "2.0.0",
  "main": "server.js",
  "scripts": {
    "build": "swc src -d dist",
    "build-dev": "bun run build && NODE_ENV=development && SWCRC=true node --inspect --loader @swc-node/register/esm src/server.ts",
    "dev": "nodemon -L --ext ts --exec \"bun run build-dev\"",
    "start": "bun run build && NODE_ENV=production node dist/server.js",
    "test": "NODE_ENV=test && jest --setupFiles dotenv/config --runInBand",
    "reset:npm": "rm -rf node_modules && bun install"
  },
  "type": "module",
  "license": "MIT",
  "dependencies": {
    "@top-gg/sdk": "^3.1.3",
    "axios": "^1.5.0",
    "bcrypt": "^5.1.1",
    "bignumber.js": "^9.0.2",
    "chalk": "^5.3.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.10",
    "discord.js": "^13.6.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "play-dl": "^1.9.6",
    "reflect-metadata": "^0.1.13",
    "topgg-autoposter": "^2.0.1",
    "typeorm": "^0.3.17",
    "validate.js": "^0.13.1"
  },
  "devDependencies": {
    "@swc-node/core": "^1.10.6",
    "@swc-node/register": "^1.6.8",
    "@swc/cli": "^0.1.62",
    "@swc/jest": "^0.2.29",
    "@types/chalk": "^2.2.0",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.14",
    "@types/supertest": "^2.0.12",
    "bun-types": "^1.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-jest-resolver": "^2.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
